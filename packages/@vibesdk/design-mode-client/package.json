{
    "name": "@vibesdk/design-mode-client",
    "version": "1.0.0",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./embedded": {
            "import": "./dist/embedded.js",
            "types": "./dist/embedded.d.ts"
        }
    },
    "files": [
        "dist",
        "src"
    ],
    "scripts": {
        "build": "tsup && tsx scripts/embed-client.ts",
        "dev": "tsup --watch",
        "typecheck": "tsc --noEmit"
    },
    "devDependencies": {
        "tsup": "^8.0.0",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    }
}